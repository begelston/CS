@model CentralStation.Models.RequestModel
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/knockout-3.4.2.js"></script>
<script src="~/Scripts/CSWS/CSWS.Dal.js"></script>
<script src="~/Scripts/CSWS/PrayerRequest.js"></script>
<script src="~/Scripts/CSWS/PrayerRequests.js"></script>
<script src="~/Scripts/CSWS/CSWS.js"></script>



<div class="container">
    <div class="row">
        <div class="col-4">
            <form class="form-horizontal">
                <fieldset>
                    <!-- Form Name -->
                    <legend>Prayer Request</legend>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="control-label" for="FirstName">First Name</label>
                        @*<input id="FirstName" data-bind="value: CSWS.PRequest.FirstName" name="FirstName" type="text" placeholder="First Name" class="form-control input-md" required=""
                            style="background-color: lightblue; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" value="" />*@
                        <input id="FirstName" name="FirstName" type="text" placeholder="First Name" class="form-control input-md" required=""
                               style="background-color: lightblue; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" value="" />
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="control-label" for="LastName">Last Name</label>
                        <input id="LastName" name="LastName" type="text" placeholder="Last Name" class="form-control input-md" required=""
                               style="background-color: lightblue; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" value="" />
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="control-label" for="Email">Email</label>
                        <input id="Email" name="Email" type="email" placeholder="Email" class="form-control input-md" required=""
                               style="background-color: lightblue; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" value="" />
                    </div>

                    <div class="checkbox">
                        <label for="checkboxes-4">
                            @Html.CheckBoxFor(m => m.RequestType)
                            Personal Spiritual Growth
                        </label>
                    </div>


                    <!-- Textarea -->
                    <div class="form-group">
                        <label class="control-label" for="PrayerText">*Briefly Tell Us How We Can Pray For You</label>
                        <textarea class="form-control" id="PrayerText" name="PrayerText"></textarea>
                    </div>
                    <!-- Button -->
                    <div class="form-group">
                        <label class="control-label" for="submitPrayer"></label>
                        <button id="submitPrayer" name="submitPrayer" class="btn btn-primary" formaction="SubmitRequest" formmethod="post">Submit</button>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col-8">
            <div class="row">
                <div class="col bg-primary">
                    1 of 2
                    <table style="width:100%">
                        <tr>
                            <th>Firstname</th>
                            <th>Lastname</th>
                            <th>Age</th>
                        </tr>
                        <tr>
                            <td>Jill</td>
                            <td>Smith</td>
                            <td>50</td>
                        </tr>
                        <tr>
                            <td>Eve</td>
                            <td>Jackson</td>
                            <td>94</td>
                        </tr>
                    </table>
                </div>
                <div class="col bg-secondary">
                    2 of 2
                    <table style="width:100%">
                        <tr>
                            <th>Firstname</th>
                            <th>Lastname</th>
                            <th>Age</th>
                        </tr>
                        <tr>
                            <td>Jill</td>
                            <td>Smith</td>
                            <td>50</td>
                        </tr>
                        <tr>
                            <td>Eve</td>
                            <td>Jackson</td>
                            <td>94</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var CSWSMain = CSWSMain || {};

    $(function () {
        CSWSMain = new CSWS();
        CSWSMain.initialize();

        ko.applyBindings(CSWSMain);
    });



</script>

